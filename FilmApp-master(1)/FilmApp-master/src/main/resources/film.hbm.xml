<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
 
     <class name="Film" table="FILM">
        <id name="id" column="film_id">
            <generator class="identity"/>
        </id>
        <property name="titre" column="titre" type="string" not-null="true" />

        <property name="genre" column="genre" type="string" not-null="true" />
        
        <property name="nbExemplaires" column="nbExemplaires" type="int" not-null="true" />
        
    </class>
</hibernate-mapping>
